<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Courses</h2>
        <a href="/courses/add" class="btn btn-success float-right">Add New Course</a>
        <hr />

        <% if (courses && courses.length > 0) { %>
            <table class="table">
                <thead>
                    <tr>
                        <th>Course ID</th>
                        <th>Course Code</th>
                        <th>Course Description</th>
                        <th></th> <!-- Empty header for remove button -->
                    </tr>
                </thead>
                <tbody>
                    <% courses.forEach(course => { %>
                        <tr>
                            <td><%= course.courseId %></td>
                            <td>
                                <form method="POST" action="/course/update">
                                    <input type="hidden" name="courseId" value="<%= course.courseId %>" />
                                    <input class="form-control" name="courseCode" type="text" value="<%= course.courseCode %>" />
                            </td>
                            <td>
                                    <input class="form-control" name="courseDescription" type="text" value="<%= course.courseDescription %>" />
                            </td>
                            <td>
                                    <button class="btn btn-primary" type="submit">Update Course</button>
                                </form>
                                <a href="/course/delete/<%= course.courseId %>" class="btn btn-danger">Remove</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p>No courses available.</p>
        <% } %>
    </div>
</div>